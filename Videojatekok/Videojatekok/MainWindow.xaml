<Window x:Class="Videojatekok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videojatekok"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="lbVideogames" Grid.Column="0" 
                 FontSize="20" Margin="20" SelectionChanged=""/>
            <Grid Grid.Column="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Azon:" FontSize="20"
                       FontWeight="Bold"/>
                <TextBlock Grid.Column="0" Grid.Row="1"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Cím:" FontSize="20"
                       FontWeight="Bold"/>
                <TextBlock Grid.Column="0" Grid.Row="2"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Év:" FontSize="20"
                       FontWeight="Bold"/>
                <TextBlock Grid.Column="0" Grid.Row="3"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Rendező:" FontSize="20"
                       FontWeight="Bold"/>
                <TextBlock Grid.Column="0" Grid.Row="4"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Ország:" FontSize="20"
                       FontWeight="Bold"/>
                <TextBlock Grid.Column="0" Grid.Row="5"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Nyelv:" FontSize="20"
                       FontWeight="Bold"/>
                <TextBlock Grid.Column="0" Grid.Row="6"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Játékidő:" FontSize="20"
                       FontWeight="Bold"/>
                <TextBox Grid.Column="2" Grid.Row="0"
                     Grid.ColumnSpan="2" x:Name="tbId"
                     VerticalAlignment="Center" FontSize="20" Margin="5"/>
                <TextBox Grid.Column="2" Grid.Row="1"
                     Grid.ColumnSpan="2" x:Name="tbTitle"
                     VerticalAlignment="Center" FontSize="20" Margin="5"/>
                <TextBox Grid.Column="2" Grid.Row="2"
                     Grid.ColumnSpan="2" x:Name="tbYear"
                     VerticalAlignment="Center" FontSize="20" Margin="5"/>
                <TextBox Grid.Column="2" Grid.Row="3"
                     Grid.ColumnSpan="2" x:Name="tbDirector"
                     VerticalAlignment="Center" FontSize="20" Margin="5"/>
                <TextBox Grid.Column="2" Grid.Row="4"
                     Grid.ColumnSpan="2" x:Name="tbCountry"
                     VerticalAlignment="Center" FontSize="20" Margin="5"/>
                <TextBox Grid.Column="2" Grid.Row="5"
                     Grid.ColumnSpan="2" x:Name="tbLanguage"
                     VerticalAlignment="Center" FontSize="20" Margin="5"/>
                <TextBox Grid.Column="2" Grid.Row="6"
                     Grid.ColumnSpan="2" x:Name="tbRuntime"
                     VerticalAlignment="Center" FontSize="20" Margin="5"/>
                <Button Grid.Column="0" Grid.Row="7" x:Name="btnCreate"
                    Content="Create" FontSize="20" Margin="5" Click="btnCreate_Click"/>
                <Button Grid.Column="1" Grid.Row="7" x:Name="btnRead"
                    Content="Read" FontSize="20" Margin="5" Click="btnRead_Click"/>
                <Button Grid.Column="2" Grid.Row="7" x:Name="btnUpdate"
                    Content="Update" FontSize="20" Margin="5" Click="btnUpdate_Click"/>
                <Button Grid.Column="3" Grid.Row="7" x:Name="btnDelete"
                    Content="Delete" FontSize="20" Margin="5" Click="btnDelete_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
